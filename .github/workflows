name: Go package

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Set up Go
        uses: actions/setup-go@v3
        with:
          go-version: 1.19
          cache: true
      - name: Install dependencies
        run: |
          go get .
          go get github.com/middelink/go-parse-torrent-name
          go get github.com/otiai10/copy
      - name: Build
        run: go build -v ./...

      - name: Test
        run: go test -v ./...